.panel.panel-default
  .panel-heading.custom-heading
    %h2 New Post
  .panel-body.custom-body
    = form_for @post do |f|
      .form-group
        = f.label :title
        %br/
        = f.text_field :title
      .form-group
        = f.label :content
        %br/
        = f.text_area :content
      .form-group
        = f.submit "Post", class: "btn btn-primary btn-lg standard-button2"
%button#link-style3.btn.btn-alt
  = link_to 'Cancel', community_path
